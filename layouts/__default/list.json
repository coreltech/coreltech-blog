[
  {{ range $index, $page := .Site.RegularPages.ByDate.Reverse }}
    {
      "title": "{{ $page.Title }}",
      "link": "{{ $page.RelPermalink }}",
      "date": "{{ $page.Date.Format "2006-01-02" }}",
      "thumbnail": "{{ if $page.Params.thumbnail }}{{ $page.RelPermalink }}{{ $page.Params.thumbnail }}{{ end }}"
    }{{ if lt $index 2 }},{{ end }}
  {{ end }}
]
